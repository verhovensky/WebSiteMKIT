@model IEnumerable<WebSite.Models.Kollegia>

@{
    ViewData["Title"] = "Коллегия";
}
    <div class="departments">
        <div class="container ">         
            <div class="row">
                <p>
                    <a href="~/docs/KollegiaPolojenie.pdf" target="_blank">
                        <h4>
                            Положение о Коллегии Министерства культуры, информации и туризма
                            Кыргызской Республики
                        </h4>
                    </a>
                </p>
                <h4>
                    Состав членов Коллегии

                    Министерства культуры информации и туризма КР
                </h4>
               
                <br />
                <br />
                <table class="table">
                    <thead>
                        <tr>
                            <th width="350">
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Positions)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Positions)
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        </div>