@model WebSite.Models.WorkList

@{
    ViewData["Title"] = "Edit";
}

<h2>Редактирование</h2>

<h4>WorkList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ResumeId" />
            <input type="hidden" asp-for="Lang" />
            <div class="form-group">
                <label asp-for="Termine" class="control-label"></label>
                <input asp-for="Termine" class="form-control" />
                <span asp-validation-for="Termine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrgName" class="control-label"></label>
                <input asp-for="OrgName" class="form-control" />
                <span asp-validation-for="OrgName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Positions" class="control-label"></label>
                <input asp-for="Positions" class="form-control" />
                <span asp-validation-for="Positions" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Desc" class="control-label"></label>
                <input asp-for="Desc" class="form-control" />
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
             <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
