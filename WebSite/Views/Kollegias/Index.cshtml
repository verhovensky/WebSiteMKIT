@model IEnumerable<WebSite.Models.Kollegia>

@{
    ViewData["Title"] = "Index";
}

<h2>Список</h2>

<p>
    <a asp-action="Create" asp-route-id="1">Добавить (руск.)</a>
    <a asp-action="Create" asp-route-id="2">Добавить (кырг.)</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Positions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desc)
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Positions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desc)
            </td>
               <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
